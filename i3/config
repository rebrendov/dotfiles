# CUSTOM CONFIGS
for_window [class="^.*"] border pixel 0 #turn off windows titlebars

gaps inner 10 #add gaps around container
gaps outer 5  #add gaps around window

# Pulse Audio controls
bindsym XF86AudioMute        exec --no-startup-id amixer -D pulse set Master 1+ toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset 'Master' 5%- #decrease sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset 'Master' 5%+ #increase sound volume

# Sreen brightness controls
bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 # decrease screen brightness

# Touchpad controls
bindsym $mod+F6 exec --no-startup-id ~/.config/i3/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay  exec --no-startup-id playerctl play
bindsym XF86AudioPause exec --no-startup-id playerctl pause
bindsym XF86AudioNext  exec --no-startup-id playerctl next
bindsym XF86AudioPrev  exec--no-startup-id playerctl previous

exec_always --no-startup-id feh --bg-fill ~/Pictures/deer-and-sun.jpg

# Use us, colemak, ru layouts and switch them to rshift
exec --no-startup-id setxkbmap -layout us,us,ru -variant ,colemak, -option 'grp:rshift_toggle'

# Start wifi gui utility
exec --no-startup-id nm-applet

# Start windows composer
exec --no-startup-id /usr/bin/compton --config /home/epsel/.compton.conf

# Manage lock/logout/suspend/shutdown etc.
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.config/i3/i3exit lock, mode "default"
    bindsym e exec --no-startup-id ~/.config/i3/i3exit logout, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/.config/i3/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

# turn on two fingers horizontal scrolling= 
# enable coasting for touchpad
exec --no-startup-id synclient HorizTwoFingerScroll=1 CornerCoasting=0 CoastingSpeed=20 CoastingFriction=38 VertScrollDelta=-144 HorizScrollDelta=200

# power management
exec --no-startup-id sudo tlp start

# switch workspaces sequentially
bindsym $mod+n workspace prev
bindsym $mod+m workspace next

